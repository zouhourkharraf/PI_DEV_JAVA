<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="705.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.magicbook.controleurs.Gestion_coursController">
    <stylesheets>
        <URL value="@/tn/magicbook/styles/gestion_cours.css" />
