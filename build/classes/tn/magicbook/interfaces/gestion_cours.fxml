        <VBox layoutX="20.0" layoutY="20.0" prefHeight="480.0" prefWidth="660.0" spacing="10.0">
            <Label text="Liste des cours" />
            <TableView fx:id="courseTable" prefHeight="350.0" prefWidth="640.0">
                <columns>
                    <TableColumn fx:id="matiereIdColumn" prefWidth="120.0" text="Matiere ID" />
                    <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
                    <TableColumn fx:id="tempsColumn" prefWidth="80.0" text="Temps" />
                    <TableColumn fx:id="titreColumn" prefWidth="355.0" text="Titre" />
                </columns>
            </TableView>
            <HBox spacing="10.0">
                <DatePicker fx:id="datePicker" prefWidth="100.0" promptText="Date" />
                <TextField fx:id="titreField" prefWidth="200.0" promptText="Titre" />
            <TextField fx:id="timer" promptText="Hours" />
            </HBox>
            <HBox spacing="10.0">
            <Text fx:id="fileName" strokeType="OUTSIDE" strokeWidth="0.0" text="Upload Only PDF files" wrappingWidth="132.13671875" />
